{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "buildCommand": "bash generate-config.sh"
}